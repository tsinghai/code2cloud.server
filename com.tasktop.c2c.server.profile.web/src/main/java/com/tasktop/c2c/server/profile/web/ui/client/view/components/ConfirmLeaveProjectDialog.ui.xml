<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d='urn:import:com.tasktop.c2c.server.profile.web.ui.client.view.deployment'>
	 <ui:style>
    	.popup { width: 400px;
				 padding: 15px; }
  	</ui:style>
<g:HTMLPanel styleName="{style.popup}">
		<div>
			Please confirm you would like to leave this project as a member. Once you leave the project, you will not be able to participate in the project 
			any longer and will require being invited to join the project.
		</div>
		<br/>
		
		<div class="center">
			  <g:Button ui:field="cancelButton" styleName="button">Cancel</g:Button>
			  <g:Button ui:field="leaveButton" styleName="button special">Leave this Project</g:Button>
		  </div>	
		
	</g:HTMLPanel>
	
</ui:UiBinder>