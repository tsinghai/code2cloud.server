<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d='urn:import:com.tasktop.c2c.server.profile.web.ui.client.view.deployment'>

	<g:HTMLPanel>
			<fieldset>
				<label>Server URL:</label>
				<div>
					<g:Label ui:field="serverUrl"/>
					<g:TextBox ui:field="serverUrlBox" visibleLength="50"/>
				</div>
			</fieldset>
			<fieldset>
				<label>User Name:</label>
				<div>
					<g:Label ui:field="username"/>
					<g:TextBox ui:field="usernameBox" visibleLength="30"/>
				</div>
			</fieldset>
			<fieldset>
				<label>Password:</label>
				<div>
					<g:PasswordTextBox ui:field="password"/>
				</div>
			</fieldset>
			<fieldset>
				<label>&nbsp;</label>
				<div>
					<g:Anchor ui:field="validatePasswordButton" styleName="button left">Validate</g:Anchor>
					<g:HTMLPanel ui:field="credentialsInvalidPanel">
						<span class="validation misc-icon error"><span></span>Error!</span>
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="credentialsValidPanel">
						<span class="validation misc-icon valid"><span></span>Success!</span>
					</g:HTMLPanel>
				</div>
			</fieldset>
	</g:HTMLPanel>
						
</ui:UiBinder>	
